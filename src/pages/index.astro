<script>
  // Counter Animation
  function animateCounters() {
    const counters = document.querySelectorAll('.counter');
    const speed = 2000; // Animation duration in ms
    
    counters.forEach(counter => {
      if (counter instanceof HTMLElement) {
        const targetAttr = counter.getAttribute('data-target');
        if (targetAttr) {
          const target = parseInt(targetAttr);
          const increment = target / (speed / 16); // 60fps
          let current = 0;
          
          const updateCounter = () => {
            if (current < target) {
              current += increment;
              counter.textContent = Math.ceil(current).toString();
              requestAnimationFrame(updateCounter);
            } else {
              counter.textContent = target + (target === 99 ? '%' : target >= 1000 ? '+' : target === 24 ? '' : '+');
            }
          };
          
          updateCounter();
        }
      }
    });
  }

  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        if (entry.target instanceof HTMLElement) {
          entry.target.style.animationPlayState = 'running';
        }
        
        // Trigger counter animation for stats
        if (entry.target.classList.contains('stats-container')) {
          animateCounters();
        }
      }
    });
  }, observerOptions);

  // Observe elements for animation
  document.addEventListener('DOMContentLoaded', () => {
    // Asegurar que todos los productos sean visibles inmediatamente
    const productWrappers = document.querySelectorAll('.product-card-wrapper');
    productWrappers.forEach((wrapper, index) => {
      if (wrapper instanceof HTMLElement) {
        wrapper.style.opacity = '1';
        wrapper.style.transform = 'translateY(0)';
        wrapper.style.visibility = 'visible';
        
        // Agregar las animaciones continuas despu√©s de un momento
        setTimeout(() => {
          wrapper.classList.add('animate-ready');
        }, (index * 200) + 1000);
      }
    });

    const animatedElements = document.querySelectorAll('.fade-in-up, .stats-container, .tech-feature');
    animatedElements.forEach(el => {
      if (el instanceof HTMLElement && !el.classList.contains('product-card-wrapper')) {
        el.style.animationPlayState = 'paused';
      }
      observer.observe(el);
    });

    // Inicializar animaciones de productos despu√©s de un delay
    setTimeout(() => {
      productWrappers.forEach((wrapper, index) => {
        if (wrapper instanceof HTMLElement) {
          // A√±adir efectos hover mejorados
          wrapper.addEventListener('mouseenter', () => {
            const innerWrapper = wrapper.querySelector('.product-inner-wrapper');
            if (innerWrapper instanceof HTMLElement) {
              innerWrapper.style.transform = 'translateY(-5px) scale(1.03)';
              innerWrapper.style.zIndex = '10';
            }
          });
          
          wrapper.addEventListener('mouseleave', () => {
            const innerWrapper = wrapper.querySelector('.product-inner-wrapper');
            if (innerWrapper instanceof HTMLElement) {
              innerWrapper.style.transform = '';
              innerWrapper.style.zIndex = '';
            }
          });
          
          // Activar efectos especiales aleatorios
          if (Math.random() > 0.7) {
            const innerWrapper = wrapper.querySelector('.product-inner-wrapper') as HTMLElement;
            if (innerWrapper) {
              innerWrapper.style.boxShadow = '0 0 20px rgba(107, 114, 128, 0.3)';
            }
          }
        }
      });
    }, 2000);

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const target = anchor.getAttribute('href');
        if (target) {
          const element = document.querySelector(target);
          if (element) {
            element.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });

    // Add parallax effect to hero elements
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const rate = scrolled * -0.5;
      
      const shapes = document.querySelectorAll('.shape');
      shapes.forEach((shape, index) => {
        if (shape instanceof HTMLElement) {
          const speed = 0.5 + (index * 0.1);
          shape.style.transform = `translateY(${rate * speed}px)`;
        }
      });

      // A√±adir efectos de paralaje suaves a los productos tambi√©n
      const productCards = document.querySelectorAll('.product-inner-wrapper');
      const triggerPoint = window.innerHeight * 0.8;
      
      productCards.forEach((card, index) => {
        if (card instanceof HTMLElement) {
          const elementTop = card.getBoundingClientRect().top;
          if (elementTop < triggerPoint && elementTop > -card.offsetHeight) {
            const parallaxSpeed = (index % 3 + 1) * 0.02;
            const yPos = -(scrolled * parallaxSpeed);
            // Solo aplicar paralaje si el elemento est√° visible
            if (Math.abs(yPos) < 20) { // Limitar el efecto
              card.style.transform += ` translateY(${yPos}px)`;
            }
          }
        }
      });
    });

    // Enhanced typing animation
    const typingElement = document.querySelector('.typing-text') as HTMLElement;
    if (typingElement) {
      const texts = ['Premium Quality', 'Tecnolog√≠a Avanzada', 'Servicio Profesional', 'Innovaci√≥n Constante'];
      let textIndex = 0;
      let charIndex = 0;
      let isDeleting = false;

      function typeAnimation() {
        const currentText = texts[textIndex];
        
        if (!isDeleting) {
          if (typingElement) {
            typingElement.textContent = currentText.substring(0, charIndex + 1);
          }
          charIndex++;
          
          if (charIndex === currentText.length) {
            setTimeout(() => { isDeleting = true; }, 2000);
          }
        } else {
          if (typingElement) {
            typingElement.textContent = currentText.substring(0, charIndex - 1);
          }
          charIndex--;
          
          if (charIndex === 0) {
            isDeleting = false;
            textIndex = (textIndex + 1) % texts.length;
          }
        }
        
        setTimeout(typeAnimation, isDeleting ? 50 : 150);
      }
      
      setTimeout(typeAnimation, 1000);
    }

    // A√±adir efectos de brillo aleatorios a los productos cada 4 segundos
    setInterval(() => {
      const products = document.querySelectorAll('.product-card-wrapper');
      const randomProduct = products[Math.floor(Math.random() * products.length)];
      const shine = randomProduct?.querySelector('.product-shine');
      
      if (shine instanceof HTMLElement && Math.random() > 0.6) {
        shine.style.left = '-100%';
        setTimeout(() => {
          shine.style.left = '100%';
        }, 100);
        setTimeout(() => {
          shine.style.left = '-100%';
        }, 900);
      }
    }, 4000);

    // Crear efectos visuales adicionales
    setTimeout(() => {
      const featuredSection = document.getElementById('featured');
      if (featuredSection) {
        const products = featuredSection.querySelectorAll('.product-card-wrapper');
        
        // A√±adir un brillo sutil que recorre los productos
        let currentIndex = 0;
        const highlightProduct = () => {
          // Quitar highlight anterior
          products.forEach(p => {
            if (p instanceof HTMLElement) {
              p.style.boxShadow = '';
            }
          });
          
          // A√±adir highlight al producto actual
          const currentProduct = products[currentIndex];
          if (currentProduct instanceof HTMLElement) {
            currentProduct.style.boxShadow = '0 0 25px rgba(107, 114, 128, 0.4)';
            
            // Quitar despu√©s de 2 segundos
            setTimeout(() => {
              currentProduct.style.boxShadow = '';
            }, 2000);
          }
          
          currentIndex = (currentIndex + 1) % products.length;
        };
        
        // Ejecutar cada 5 segundos
        setInterval(highlightProduct, 5000);
        highlightProduct(); // Ejecutar inmediatamente
      }
    }, 3000);
  });

  // Add loading states and micro-interactions
  document.querySelectorAll('a, button').forEach((element: Element) => {
    element.addEventListener('mouseenter', () => {
      if (element instanceof HTMLElement) {
        element.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
      }
    });
  });
</script>